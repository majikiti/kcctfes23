<style lang="scss" is:global>
  // ほんとはis:globalじゃなくてもいい
  @use "~/styles/utils.scss" as *;

  .content {
    display: flex;
    flex-direction: column;
    background: linear-gradient(to bottom right, mistyrose, thistle);
    font-family: "M PLUS Rounded 1c", sans-serif;
    font-weight: 500;
  }

  .hero {
    display: flex;
    margin: 3rem;
    height: 100vh;
    position: relative;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 5rem;
    background: white;

    @include upto(sm) {
      background: red;
    }

    .head {
      padding-right: 25%;
      padding-bottom: 40%;
      position: absolute;
      transform: rotate(-18deg);
      font-size: 4rem;
      font-weight: 700;
    }

    .title {
      display: flex;
      margin: 0;
      position: absolute;
      flex-direction: column;
      align-items: center;
      font-family: $f-bb;
      font-size: 8rem;
      font-weight: 700;
      line-height: 1.2;

      span {
        display: inline-block;
      }
    }
  }

  .container {
    margin: 4rem;
  }
</style>
